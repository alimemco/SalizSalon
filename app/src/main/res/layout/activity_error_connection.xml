<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Activities.ErrorConnectionActivity">

    <com.alirnp.salizsalon.CustomViews.MyTextView
        android:id="@+id/activity_error_connection_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_connection"
        android:textSize="@dimen/large_3X_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.alirnp.salizsalon.CustomViews.MyButton
        android:id="@+id/activity_error_connection_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margin2x"
        android:text="@string/try_again"
        app:layout_constraintLeft_toLeftOf="@id/activity_error_connection_textView"
        app:layout_constraintRight_toRightOf="@id/activity_error_connection_textView"
        app:layout_constraintTop_toBottomOf="@id/activity_error_connection_textView" />


</androidx.constraintlayout.widget.ConstraintLayout>