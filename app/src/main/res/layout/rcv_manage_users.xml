<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/rcv_manage_users_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_blue_200"
        app:layout_constraintTop_toTopOf="parent" />

    <com.alirnp.salizsalon.CustomViews.MyTextView
        android:id="@+id/rcv_manage_users_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_margin2x"
        android:textSize="@dimen/large_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rcv_manage_users_line"
        tools:text="username" />

    <com.alirnp.salizsalon.CustomViews.MyTextView
        android:id="@+id/rcv_manage_users_userLevel"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/standard_margin2x"
        android:layout_marginRight="@dimen/standard_margin2x"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/rcv_manage_users_username"
        app:layout_constraintLeft_toRightOf="@id/rcv_manage_users_king"
        app:layout_constraintTop_toTopOf="@id/rcv_manage_users_username"
        tools:text="admin" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/rcv_manage_users_king"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/standard_margin2x"
        android:layout_marginRight="@dimen/standard_margin2x"
        app:layout_constraintBottom_toBottomOf="@id/rcv_manage_users_username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/rcv_manage_users_username"
        app:srcCompat="@drawable/ic_king" />

</androidx.constraintlayout.widget.ConstraintLayout>