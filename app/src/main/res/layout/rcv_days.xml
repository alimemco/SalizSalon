<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/standard_margin2x"
    android:background="@color/gray_blue_100">


    <com.alirnp.salizsalon.CustomViews.MyTextView
        android:id="@+id/rcv_days_dayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_margin"
        android:text="دوشنبه"
        android:textSize="@dimen/large_3X_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.alirnp.salizsalon.CustomViews.MyTextView
        android:id="@+id/rcv_days_dayOfMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_margin"
        android:layout_marginTop="8dp"
        android:text="12"
        android:textSize="@dimen/large_2X_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rcv_days_dayName" />


</androidx.constraintlayout.widget.ConstraintLayout>