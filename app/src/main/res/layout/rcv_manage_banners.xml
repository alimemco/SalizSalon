<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/rcv_manage_banners_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_launcher" />

        <com.alirnp.salizsalon.CustomViews.MyTextView
            android:id="@+id/rcv_manage_banners_tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="موقعیت"
            android:textSize="@dimen/large_2X_sp"
            app:layout_constraintLeft_toRightOf="@id/rcv_manage_banners_editText_position"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rcv_manage_banners_img" />

        <com.alirnp.salizsalon.CustomViews.MyEditText
            android:id="@+id/rcv_manage_banners_editText_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="position"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@id/rcv_manage_banners_tv_position"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/rcv_manage_banners_tv_position"
            app:layout_constraintTop_toTopOf="@id/rcv_manage_banners_tv_position" />


        <com.alirnp.salizsalon.CustomViews.MyEditText
            android:id="@+id/rcv_manage_banners_tv_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_margin2x"
            android:layout_marginBottom="@dimen/standard_margin2x"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rcv_manage_banners_tv_position"
            tools:text="@string/lorem" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>