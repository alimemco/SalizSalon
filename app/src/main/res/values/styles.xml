<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonGreen" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_button_green</item>
        <item name="android:textColor">@color/btn_text_color</item>
        <item name="android:paddingRight">@dimen/standard_margin2x</item>
        <item name="android:paddingLeft">@dimen/standard_margin2x</item>

    </style>

    <style name="buttonPrimaryRadius" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn_radius</item>
        <item name="android:paddingRight">@dimen/standard_margin2x</item>
        <item name="android:paddingLeft">@dimen/standard_margin2x</item>
        <item name="android:textSize">@dimen/large_2X_sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="buttonStrokePrimary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_stroke_primary</item>
        <item name="android:paddingRight">@dimen/standard_margin2x</item>
        <item name="android:paddingLeft">@dimen/standard_margin2x</item>
        <item name="android:textSize">@dimen/large_3X_sp</item>
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_layer_list</item>
    </style>


</resources>
